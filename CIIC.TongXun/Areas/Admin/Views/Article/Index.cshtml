@model ZJ.App.Entity.ArticleJournalEntity
@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Journal",new { area = "Admin"})">期刊列表</a></li>
            <li class="active">
                <strong>文章列表</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-4">期刊名:</label>
                            <div class="col-md-8">
                                @Html.Label("JournalName", Model.JournalName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-3">总期数:</label>
                            <div class="col-md-8">
                                @Html.Label("JournalName", Model.PropertyName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-4">文章标题:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" id="MovieFileName" data-model="article.MovieFileName" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-3">类别:</label>
                            <div class="col-md-8">
                                <select class="js-example-data-array form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">

                    </div>
                </div>
                <div class="row">
                    <div class="pull-right">
                        <a class="btn btn-sm btn-info" id="btnSearch"><i class="fa fa-search"></i> 搜索 </a>
                        <a onclick="createArticle(@Model.JournalId)" class="btn btn-sm btn-primary"><i class="fa fa-plus-circle"></i> 新增 </a>
                    </div>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTable" id="articleList"></table>
            </div>
            @Html.Hidden("JournalId", Model.JournalId, new { data_model = "article.JournalId" })
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/dataTablesStyles")
    <style type="text/css">
        th.td-id {
            width: 5%;
        }
        th.td-category-no, th.td-category {
            width: 9%;
        }
        th.td-category {
            width: 10%;
        }
        th.td-time {
            width: 12%;
        }
        th.td-op {
            width: 7%;
        }
        div.titleDesc {
            width: 600px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
}
@section scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/Scripts/common.js")
    @Scripts.Render("~/Scripts/ControlJS/article_index.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery.dotdotdot/4.1.0/dotdotdot.js" type="text/javascript"></script>
}