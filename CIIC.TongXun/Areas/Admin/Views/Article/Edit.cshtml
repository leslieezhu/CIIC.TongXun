@model ZJ.App.Entity.ArticleEntity
@{
    ViewBag.Title = "编辑文章";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Article",new { area = "Admin",JournalId=Model.JournalId})">文章列表</a></li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <form id="form1">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">期刊名</label>
                                <div class="col-md-8 input-group">
                                    @Html.Label("JournalName", Model.JournalName)
                                    @*@Html.DropDownList("ArticleProperty", null, new { @class = "form-control", data_model = "article.JournalId" })*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-4 control-label">总期数:</label>
                                <div class="col-md-8 input-group">
                                    @Html.Label("JournalName", Model.PropertyName)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">类别:</label>
                                <div class="col-md-8 input-group">
                                    <select class="js-example-data-array form-control"></select>
                                    @Html.Hidden("ArticleCategory", Model.CategoryId)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">文章序号:</label>
                                <div class="col-md-8 input-group">
                                    @Html.TextBox("NoOfJournal", Model.NoOfJournal, new { @class = "form-control", data_model = "article.NoOfJournal", data_val = "true", data_val_required = "不能为空！" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">类别序号:</label>
                                <div class="col-md-8 input-group">
                                    @Html.TextBox("NoOfCategory", Model.NoOfCategory, new { @class = "form-control", data_model = "article.NoOfCategory" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label"><span style="color:red">*</span>文章标题</label>
                                <div class="col-md-9 input-group">
                                    @Html.TextArea("ArticleTitle", Model.ArticleTitle, new { @class = "form-control", required = "required", data_model = "article.ArticleTitle", style = "max-width: 100%;height:75px" })
                                    @Html.Hidden("Id", Model.Id, new { data_model = "article.Id" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">文章标题别名<br />(可选)</label>
                                <div class="col-md-9 input-group">
                                    @Html.TextArea("ArticleTitleAlias", Model.ArticleTitleAlias, new { @class = "form-control", required = "required", data_model = "article.ArticleTitleAlias", style = "max-width: 100%;height:75px" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">首页显示:</label>
                                <div class="col-md-8 input-group">
                                    @Html.CheckBox("IsTop", Model.IsTopValue, new { @class = "form-control", data_model = "article.IsTop" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label"></label>
                                <div class="col-md-8 input-group">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label"></label>
                                <div class="col-md-8 input-group">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="col-md-2 control-label">文章内容:</label>
                            <div class="form-group">
                                <div class="col-md-9 input-group">
                                    @Html.TextArea("ArticleContent", Model.ArticleContent, new { @class = "form-control", required = "required", data_model = "article.ArticleContent", style = "max-width: 100%; height:400px" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">图片:</label>
                                <div class="col-md-10 input-group">
                                    <div id="imgList" class="media">

                                    </div>
                                    <input id="fileupload" type="file" name="files">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <center>
                            <a href="javascript:void(0);" class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> 保存 </a>
                        </center>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/jQueryFileUploadCss")
    <style>

    </style>
}
@section scripts {
    @Scripts.Render("~/bundles/jQueryFileUpload")
    @Scripts.Render("~/Scripts/plugins/kindeditor/kindeditor-all.js")
    @Scripts.Render("~/Scripts/common.js")
    @Scripts.Render("~/Scripts/ControlJS/article_edit.js")
}


