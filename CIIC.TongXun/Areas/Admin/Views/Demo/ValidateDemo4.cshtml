@{
    Layout = null;
    ViewBag.Title = "ValidateDemo";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Test for jQuery validate() plugin</title>

    <style>

    </style>
    <script>

    </script>
</head>
<body>
    <form id="myform">
        <label for="field">Required, step 10: </label>
        <input type="text" class="left" id="field" name="field">
        <br />
        <input type="submit" value="Validate!">
    </form>
    <script src="~/Scripts/jquery/1.12.4/jquery-1.12.4.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jqueryvalidation/1.19.2/jquery.validate.min.js"></script>
    <script src="~/Scripts/jqueryvalidation/1.19.2/additional-methods.min.js"></script>
    <script>
        // just for the demos, avoids form submit
        jQuery.validator.setDefaults({
            debug: true,
            success: "valid"   //参考valiate([option]) option各个属性定义, success: 这里会将valid作为class字面值加到label标签里
        });
        $("#myform").validate({
            rules: {
                field: {
                    required: true,
                    step: 10
                }
            }
        });
    </script>
</body>
</html>

